    def addNewElement(self,className): #adds class name to classDir
        cla = open("classDir.txt","w+")
        cla.write(className+"\n")
        cla.close()
        
        clas = open("classDir.txt","r")
        for line in clas:
            print(line)
            
        clas.close()
        


